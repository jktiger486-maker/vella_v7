```python
# ============================================================
# AUTO-GENERATED FILE â€” DO NOT EDIT MANUALLY
# SOURCE OF TRUTH: PIT-4, PIT-6
# ============================================================

import time
from dataclasses import dataclass

from vella_v7.app.orchestrator import Orchestrator
from vella_v7.contracts.contracts import EngineState


# ------------------------------------------------------------
# Mock Market Data Carrier
# ------------------------------------------------------------

@dataclass
class MarketData:
    ts: int
    volatility: float
    liquidity: float


# ------------------------------------------------------------
# Bootstrap
# ------------------------------------------------------------

def initial_state() -> EngineState:
    return EngineState(
        has_position=False,
        position_side=None,
        entry_price=None,
        position_size=None,
        entry_time=None,
        last_exit_reason=None,
        last_update_ts=0,
    )


def main_loop():
    orchestrator = Orchestrator()
    state = initial_state()

    ts = 0

    while True:
        # ----------------------------------------------------
        # Build mock market data
        # ----------------------------------------------------
        market_data = MarketData(
            ts=ts,
            volatility=0.0,
            liquidity=0.0,
        )

        # ----------------------------------------------------
        # Run one engine cycle
        # ----------------------------------------------------
        state = orchestrator.run_cycle(
            market_data=market_data,
            state=state,
        )

        # ----------------------------------------------------
        # Observe (no decision)
        # ----------------------------------------------------
        print("STATE:", state)

        ts += 1
        time.sleep(1)


if __name__ == "__main__":
    main_loop()

